{
  "name": "russunit-slider",
  "version": "1.0.0",
  "description": "lightweight vanilla js carousel",
  "main": "index.js",
  "scripts": {
    "compile:js": "babel ./src -d ./dist",
    "minify:js": "node-minify --compressor uglify-js --input ./dist/russunit-slider.js --output ./dist/russunit-slider.min.js",
    "compile:css": "sass ./src/russunit-slider.scss ./dist/russunit-slider.css",
    "build": "npm run compile:css & npm run compile:js && npm run minify:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/russunit/slider.git"
  },
  "keywords": [
    "slider",
    "carousel",
    "javascript"
  ],
  "author": "Russell Chisholm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/russunit/slider/issues"
  },
  "homepage": "https://github.com/russunit/slider#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@node-minify/cli": "^5.3.0",
    "@node-minify/uglify-js": "^5.3.0",
    "sass": "^1.26.3"
  }
}
